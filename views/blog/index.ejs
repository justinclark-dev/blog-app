<%- include('../partials/nav') %>
    
    <h1><%= page.title %></h1>

    <a href="/blog/new">Add Blog Post</a>

    <ul>
        <% blogs.forEach((blog)=> { %>
            <li>

                <h2><%= blog.name %></h2>

                <sub><%= blog.datePublished %></sub>
                <sub><%= blog.category %></sub>
                
                <p><%= blog.content %></p>

                <a href="/blog/<%=blog._id%>">
                    <%= blog.name %>
                </a>

            </li>
            <% }) %>
    </ul>

