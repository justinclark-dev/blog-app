<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= page.title %></title>
    <link rel="stylesheet" href="/css/style.css">

    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

</head>
<body>
<%- include('../partials/nav') %>
    
    <h1><%= page.title %></h1>

    <form id="edit-form" class="blog-post" action="/blog/<%=blog._id%>?_method=PUT" method="POST">
        
        <div class="column">
            <label for="name">Name:</label>
            <input type="text" name="name" id="name" value="<%= blog.name %>"/>
        </div>

        <div class="column checkbox-div">
            <label for="isActive">Active:</label>
            <input type="checkbox" name="isActive" id="is-active" <% if (blog.isActive) { %>checked<% } %>/>
        </div>

        <div class="column">
            <label for="datePublished">Date Published:</label>
            <input type="date" name="datePublished" id="date-published" value="<%= blog.datePublished %>"/>
        </div>

        <div class="column">
            <label for="category">Category:</label>
            <input type="text" name="category" id="category" value="<%= blog.category %>"/>
        </div>

        <div class="column">
            <div id="editor"><%- blog.content %></div>
            <input type="hidden" name="content" id="editorContent">
        </div>

        <div class="row blog-control-buttons">
            <button type="submit">Update</button>

            <a href="/blog">
                <button>Cancel</button>
            </a>
        </div>
    </form>

    <script>

        var quill = new Quill('#editor', {
            theme: 'snow',   // Specify theme (snow or bubble)
            modules: {
            toolbar: [
                ['bold', 'italic', 'underline'],  // toggled buttons
                ['link', 'image']                 // link and image
            ]
            }
        });

        document.getElementById('edit-form').onsubmit = function() {
            const content = quill.root.innerHTML;
            document.getElementById('editorContent').value = content;
        };

    </script>
    

<%- include('../partials/footer') %>